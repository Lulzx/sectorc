# Stage 1: Hex-to-Binary - Linux i386 ELF
# Standalone executable that converts hex to binary
# Input: hex pairs from stdin | Output: binary bytes to stdout
#
# Build: xxd -r -p <(grep -v '^\s*#' stage1.hex | sed 's/#.*//') > hex2bin
# Test:  echo "48 69 0a" | ./hex2bin  # prints "Hi\n"
#
# Size: 204 bytes (84 header + 120 code)
# ============================================================================

# === ELF Header (52 bytes) ===
7f 45 4c 46                 # e_ident: ELF magic
01                          # EI_CLASS: 32-bit
01                          # EI_DATA: little-endian
01                          # EI_VERSION: 1
00                          # EI_OSABI: SYSV
00 00 00 00 00 00 00 00     # padding
02 00                       # e_type: ET_EXEC
03 00                       # e_machine: i386
01 00 00 00                 # e_version: 1
54 80 04 08                 # e_entry: 0x08048054
34 00 00 00                 # e_phoff: 52
00 00 00 00                 # e_shoff: 0
00 00 00 00                 # e_flags: 0
34 00                       # e_ehsize: 52
20 00                       # e_phentsize: 32
01 00                       # e_phnum: 1
00 00 00 00 00 00           # e_sh* (unused)

# === Program Header (32 bytes) ===
01 00 00 00                 # p_type: PT_LOAD
00 00 00 00                 # p_offset: 0
00 80 04 08                 # p_vaddr: 0x08048000
00 80 04 08                 # p_paddr: 0x08048000
cc 00 00 00                 # p_filesz: 204 bytes
cc 00 00 00                 # p_memsz: 204 bytes
07 00 00 00                 # p_flags: RWX
00 10 00 00                 # p_align: 4096

# === Code @ 0x54 (120 bytes) ===
# Stack: [buffer byte] [nibble storage]

6a 00                       # push 0 (buffer space)
6a 00                       # push 0 (nibble storage)

# _read @58: read one char
b0 03                       # mov al, 3 (sys_read)
31 db                       # xor ebx, ebx (stdin)
8d 4c 24 04                 # lea ecx, [esp+4]
b2 01                       # mov dl, 1
cd 80                       # int 0x80
85 c0                       # test eax, eax
74 53                       # jz _exit (0x53 forward)
8a 44 24 04                 # mov al, [esp+4]

# skip whitespace
3c 20                       # cmp al, ' '
74 e8                       # je _read (-0x18)
3c 0a                       # cmp al, '\n'
74 e4                       # je _read
3c 09                       # cmp al, '\t'
74 e0                       # je _read

# check comment
3c 23                       # cmp al, '#'
75 0e                       # jne _digit (0x0e forward)

# _skipln: skip to end of line
b0 03                       # mov al, 3 (sys_read)
cd 80                       # int 0x80
8a 44 24 04                 # mov al, [esp+4]
3c 0a                       # cmp al, '\n'
75 f4                       # jne _skipln
eb ce                       # jmp _read

# _digit: process hex digit
e8 32 00 00 00              # call _hex
c0 e0 04                    # shl al, 4
88 04 24                    # mov [esp], al (save high nibble)

# read second digit
b0 03                       # mov al, 3
31 db                       # xor ebx, ebx
8d 4c 24 04                 # lea ecx, [esp+4]
b2 01                       # mov dl, 1
cd 80                       # int 0x80
8a 44 24 04                 # mov al, [esp+4]
e8 17 00 00 00              # call _hex
0a 04 24                    # or al, [esp]

# write byte to stdout
88 44 24 04                 # mov [esp+4], al
b0 04                       # mov al, 4 (sys_write)
b3 01                       # mov bl, 1 (stdout)
b2 01                       # mov dl, 1
cd 80                       # int 0x80
eb a4                       # jmp _read

# _exit:
b8 01 00 00 00              # mov eax, 1
31 db                       # xor ebx, ebx
cd 80                       # int 0x80

# _hex: convert hex char in al to value
3c 39                       # cmp al, '9'
7e 04                       # jle _digit_num
2c 07                       # sub al, 7 (A=65, 65-7-48=10)
eb 02                       # jmp _done_hex
# _digit_num:
2c 30                       # sub al, '0'
# _done_hex:
c3                          # ret
